# General settings
ENV=development
LOG_LEVEL=INFO
TZ=UTC

# Database - MySQL
MYSQL_ROOT_PASSWORD=rootpass
MYSQL_DATABASE=alarm_system
MYSQL_USER=alarm_user
MYSQL_PASSWORD=alarm_password
DATABASE_URL=mysql+pymysql://alarm_user:alarm_password@alarm_mysql:3306/alarm_system
SQL_ECHO=true

# Frontend
FRONTEND_ORIGIN=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# Market Data API (CoinGecko - Free, No Key Required)
PRICE_API_URL=https://api.coingecko.com/api/v3
PRICE_API_KEY=
PRICE_API_TIMEOUT=10
PRICE_API_MAX_RETRIES=3

# Email Service (Development: MailDev, Production: AWS SES)
MAIL_BACKEND=smtp
SMTP_HOST=maildev
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SES_SOURCE_EMAIL=no-reply@alarm-system.local

# AWS Configuration (Production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=dummy_for_dev
AWS_SECRET_ACCESS_KEY=dummy_for_dev

# RDS MySQL for Lambda (Production)
RDS_HOST=
RDS_USER=alarm_user
RDS_PASSWORD=alarm_password
RDS_DB=alarm_system
RDS_PORT=3306

# Worker/Scheduler Settings
WORKER_LOOP=true
WORKER_DELAY=60

# Development
DEBUG=true
ENVIRONMENT=development